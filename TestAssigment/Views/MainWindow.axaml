<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:TestAssigment.ViewModels"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
        MinWidth="600" MinHeight="400" FontSize="14"
        x:DataType="vm:MainWindowViewModel"
        x:Class="TestAssigment.Views.MainWindow"
        Title="TestAssigment">
    <DockPanel>
        <!-- Меню -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Файл">
                <MenuItem Header="_Открыть проект" />
                <Separator />
                <MenuItem Header="_Закрыть" IsEnabled="False" />
            </MenuItem>
        </Menu>

        <!-- Меню -->
        <Grid
            DockPanel.Dock="Top"
            ColumnDefinitions="*, *, *"
            RowDefinitions="Auto, Auto"
            Margin="10">
            <Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center">Объекты</Label>
            <Label Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center">Модификации</Label>
            <Label Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center">Проверки</Label>

            <ComboBox
                x:Name="ObjectsDropDown"
                Grid.Row="1"
                Grid.Column="0"
                Margin="5 0"
                HorizontalAlignment="Stretch"
                IsEnabled="False">
            </ComboBox>
            <ComboBox
                x:Name="ModificationsDropDown"
                Grid.Row="1"
                Grid.Column="1"
                Margin="5 0"
                HorizontalAlignment="Stretch"
                IsEnabled="False">
            </ComboBox>
            <ComboBox
                x:Name="ChecksDropDown"
                Grid.Row="1"
                Grid.Column="2"
                Margin="5 0"
                HorizontalAlignment="Stretch"
                IsEnabled="False">
            </ComboBox>
        </Grid>
        <DataGrid
            Margin="20"
            x:Name="MainDataGrid"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding Checks}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Width="60" Binding="{Binding N}" />
                <DataGridTextColumn Header="Контакт 1" Width="*" Binding="{Binding Contact1}" />
                <DataGridTextColumn Header="Контакт 1" Width="*" Binding="{Binding Contact2}" />
                <DataGridTextColumn Header="Тип проверки" Width="*" Binding="{Binding CheckType}" />
                <DataGridTextColumn Header="Объект" Width="*" Binding="{Binding Object}" />
                <DataGridTextColumn Header="Модификации Объекта" Width="*" Binding="{Binding Modifications}" />
                <DataGridTextColumn Header="Результат проверки" Width="*" Binding="{Binding CheckResult}" />
            </DataGrid.Columns>

            <!-- Пример данных для демонстрации -->
        </DataGrid>
        <TextBlock />
    </DockPanel>
</Window>